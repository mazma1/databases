{
  "variables": {
    "project_id": "{{ env `PROJECT_ID` }}"
  },

  "builders": [
    {
      "type": "googlecompute",
      "account_file": "../gcp_account.json",
      "project_id": "{{ user `project_id` }}",
      "source_image": "ubuntu-1604-xenial-v20181004",
      "zone": "us-central1-b",
      "ssh_username": "packer",
      "image_name": "slave-base-image-{{timestamp}}",
      "image_family": "slave"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "../scripts/slave_replication.sh",
      "destination": "/tmp/slave_replication.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/slave_config.sh"
      ]
    }
  ]
}
