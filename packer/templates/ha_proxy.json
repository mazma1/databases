{
  "variables": {
    "project_id": "{{ env `PROJECT_ID` }}"
  },

  "builders": [
    {
      "type": "googlecompute",
      "account_file": "../gcp_account.json",
      "project_id": "{{ user `project_id` }}",
      "source_image": "ubuntu-1604-xenial-v20181004",
      "zone": "us-central1-a",
      "ssh_username": "packer",
      "image_name": "haproxy-base-image-{{timestamp}}",
      "image_family": "ha-proxy"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/ha_proxy.sh"
      ]
    }
  ]
}
